<%= form_for @project, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :repository, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :repository, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :branch, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :branch, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :command, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :command, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                projects_path, :class => 'btn' %>
  </div>
<% end %>
